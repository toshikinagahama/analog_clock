{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:allow-start-dragging",
    "autostart:allow-enable",
    "fs:default",
    "fs:allow-write-text-file",
    "fs:allow-mkdir",
    {
      "identifier": "fs:scope",
      "allow": ["$HOME/hama/**", "$HOME/hama"]
    }
  ]
}
