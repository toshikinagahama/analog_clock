:root {
  font-family: Inter, Avenir, Helvetica, Arial, sans-serif;
  font-size: 16px;
  line-height: 24px;
  font-weight: 400;

  font-synthesis: none;
  text-rendering: optimizeLegibility;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  background: transparent; /* Critical for transparent window */
  /*background: rgba(30, 30, 30, 0.85); /* Semi-transparent dark bg */
  overflow: hidden;
  user-select: none; /* Prevent text selection */
  cursor: default;
}

.clock-container {
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
  pointer-events: none; /* Let clicks pass through empty space */
}

.clock {
  width: 280px;
  height: 280px;
  background: rgba(30, 30, 30, 0.65); /* Semi-transparent dark bg */
  border-radius: 50%;
  border: 4px solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  -webkit-app-region: drag;
  pointer-events: auto; /* Capture clicks for dragging */
}

.face {
  width: 100%;
  height: 100%;
  position: relative;
}

.center-point {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 12px;
  height: 12px;
  background: #ff5252;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  z-index: 10;
  pointer-events: none; /* Allow dragging through center point */
}

.hand {
  position: absolute;
  bottom: 50%;
  left: 50%;
  transform-origin: bottom center;
  transform: translateX(-50%) rotate(0deg); /* Initial state */
  border-radius: 4px;
  z-index: 5;
  pointer-events: none; /* Allow dragging through hands */
}

.hour-hand {
  width: 8px;
  height: 70px;
  background: #ffffff;
}

.minute-hand {
  width: 6px;
  height: 100px;
  background: #e0e0e0;
}

.second-hand {
  width: 2px;
  height: 110px;
  background: #ff5252;
  bottom: 40%; /* Extends a bit backwards */
  transform-origin: 50% 74.5%; /* Corrected pivot: (110-28)/110 */
  z-index: 8;
}

/* Markers styling - generated by JS can use this */
.marker {
    position: absolute;
    width: 4px;
    height: 12px;
    background: rgba(255, 255, 255, 0.6);
    left: 50%;
    transform-origin: 50% 140px; /* Radius of clock */
    top: 0;
    transform: translateX(-50%);
    pointer-events: none; /* Allow dragging through markers */
}

.marker.hour {
    width: 6px;
    height: 18px;
    background: rgba(255, 255, 255, 0.9);
}
